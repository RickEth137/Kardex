{
  "manifest_version": 3,
  "name": "Kardex",
  "version": "1.0.0",
  "description": "Crypto wallet and virtual card extension",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "https://www.sandbox.striga.com/*",
    "https://striga.com/*"
  ],
  "host_permissions": [
    "https://www.sandbox.striga.com/*",
    "https://striga.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
